<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Your Account</h1>
        <hr>
        <h2> My orders</h2>
        {{# each orders }}
        <div class="panel panel-default">
            <div class="panel-body">
                <ul class="list-group">
                    {{# each this.items }} 
                    <li class="list-group-item">
                        <span class="badge">{{ this.price }}</span>
                            {{ this.item.title }} | {{ this.qty }} Units 

                            <a href="/shop/history/add-to-cart/{{ this.item._id }}" class="btn btn-success pull-right">Add to Cart</a>
                    </li>
                    {{/each}}
               
                </ul>
            </div> 
            <div class="panel-footer">
                <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
               
            </div>
        </div>
        {{/each}}
    </div>
</div>
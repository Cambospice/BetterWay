{{# if products }}
    <!-- styling for a page -->
    <br>
    {{# each products}}
        <div class="card-deck"> <!-- can be changed to rows -->
            {{# each this}}
                <div id="noSearch" class="card" style="width: 20rem;">
                <img class="card-img-top" src="{{this.imagePath}}" alt="{{this.title}}">
                <div class="card-block">
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text">{{this.description}}</p>
                    <div class = "clearfix">
                        <div class = "price pull-left">${{this.price}}</div>
                        <a href="/listsearch/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Add to Cart</a>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
        <br>
    {{/each}}
{{ else }}
<div class = "row">
    <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Search Result Found</h2>
    </div>
</div>

{{/if}}

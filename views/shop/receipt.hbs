{{# each products}}

    <div class="heading">
        <span align="center">
        <h2>Your Customer Receipt</h2>
        <h4>Thank you for shopping at Betterway!</h4></span>
    </div><br><br>
    {{# each this}}

    <div class="userInfo">
    Received from: <br>
    {{this.name}}<br />
    {{this.address}}
    </div><br><br>
    {{/each}}
{{/each}}


    <div class="order">
        <table style="width:100%" cellpadding="4" cellspacing="4">
        <tr>
            <th>Item</th>
            <th>Aisle</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>

        {{# each items}}

        <tr>
            <td>{{this.item.title}}</td>
            <td>{{this.item.aisle}}</td>
            <td>{{this.qty}}</td>
            <td>${{this.item.price}}.00</td>
        </tr>

        {{/each}}

        <tr>
        </tr>
        </table>
    </div><br><br>

    <div class="subtotal">
        <table style="width: 48.5%" align="right">

        <tr>
          <th>Discount:</th>
          <td>${{totalDiscount}}</td>
        </tr>
        <tr>
            <th>Total:</th>

            <td>${{totalPrice}}</td>

        </tr>


    </div>
